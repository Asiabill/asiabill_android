<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asiabill_android_sdk_java">

    <application
        android:name="AsiabillApplication"
        android:allowBackup="true"
        android:icon="@mipmap/asiabill_app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true">

        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--商户正式网关号//////格式: 商户号##网关号##signkey-->
        <meta-data
            android:name="asiabillsdk_key"
            android:value="12117##12117001##12345678" />

        <!--商户测试网关号//////格式: 商户号##网关号##signkey-->
        <meta-data
            android:name="asiabillsdk_test_key"
            android:value="12167##12167001##12345678" />
    </application>

</manifest>